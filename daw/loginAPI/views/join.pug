extends index

block content
.container
  p | 횐가입
    .timeline
      form#join-form(action='/api/auth/register', method='post')
        .input-group
          label(for='email') 이메일
          input#email(type='email', name='email')
        .input-group
          label(for='nick') 닉네임
          input#nick(type='text', name='nick')
        .input-group
          label(for='password') 비밀번호
          input#password(type='password', name='password')
        .input-group
          a#join.btn(href='login') 뒤로가기
          button#login.btn(type='submit') 회원가입
